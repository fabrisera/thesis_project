	issn = {1741-0398},
	journal = {Journal of enterprise information management},
	keywords = {Absorption cross sections ; Annual reports ; Atmosphere ; Boards of directors ; Business & Economics ; Carbon ; Climate change ; Computer Science ; Computer Science Interdisciplinary Applications ; Data analysis ; Decision making ; Disclosure ; Emissions ; Environmental impact ; Environmental policy ; Gender ; Greenhouse effect ; Greenhouse gases ; Human bias ; Information management ; Information Science & Library Science ; Literature reviews ; Management ; Regression analysis ; Science & Technology ; Social responsibility ; Social Sciences ; Stock exchanges ; Technology},
	language = {eng},
	number = {6},
	pages = {1557--1579},
	publisher = {Emerald Publishing Limited},
	title = {The effect of board diversity on disclosure and management of greenhouse gas information: evidence from the United Kingdom},
