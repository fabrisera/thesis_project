@Article{tefoso,
  author={Yu, Baojun and Li, Changming and Mirza, Nawazish and Umar, Muhammad},
  title={{Forecasting credit ratings of decarbonized firms: Comparative assessment of machine learning models}},
  journal={Technological Forecasting and Social Change},
  year=2022,
  volume={174},
  number={C},
  pages={},
  month={},
  keywords={Carbon neutrality; Low carbon transitions; Machine learning; Credit ratings},
  doi={10.1016/j.techfore.2021.1},
  abstract={Maintaining low carbon energy transitions is a phenomenon that is critical in curtailing greenhouse emissions. However, such shifts usually warrant incremental capital expenditures, which require an uninterrupted access to financing. Credit ratings are an essential consideration of the financing process. In this paper, we assess the ability of various machine learning models, in order to forecast the credit ratings of eco-friendly firms. For this purpose, we have employed a sample of 355 Eurozone firms that are ranked on the basis of the extent of their climate change score by SDP, between the years spanning from 2010 to 2019. The study uses various machine learning methods, and the findings suggest that classification and regression trees have the most precision for the credit rating predictions. Even when the forecasting was constrained to the investment grades, speculative grades, or default categories, the accuracy remained robust. The results also suggest that a random forest ensemble can be used alongside the regression trees in order to predict default or near default ratings. Given that such firms face dynamic risk exposure towards environmental, ecological, and social factors, these results have important implications that can be taken into consideration when assessing the credit risk of pro-ecological firms.},
  url={https://ideas.repec.org/a/eee/tefoso/v174y2022ics0040162521006892.html}
}


@article{bingler-climatebert,
	abstract = {Disclosure of climate-related financial risks greatly helps investors assess companies' preparedness for climate change. Voluntary disclosures such as those based on the recommendations of the Task Force for Climate-related Financial Disclosures (TCFD) are being hailed as an effective measure for better climate risk management. We ask whether this expectation is justified. We do so by training ClimateBERT, a deep neural language model fine-tuned based on the language model BERT. In analyzing the disclosures of TCFD-supporting firms, ClimateBERT comes to the sobering conclusion that the firms' TCFD support is mostly cheap talk and that firms cherry-pick to report primarily non-material climate risk information.},
	author = {Julia Anna Bingler and Mathias Kraus and Markus Leippold and Nicolas Webersinke},
	doi = {https://doi.org/10.1016/j.frl.2022.102776},
	issn = {1544-6123},
	journal = {Finance Research Letters},
	keywords = {Climate-risk disclosure, Voluntary reporting, TCFD recommendations, Natural language processing},
	pages = {102776},
	title = {Cheap talk and cherry-picking: What ClimateBert has to say on corporate climate risk disclosures},
	url = {https://www.sciencedirect.com/science/article/pii/S1544612322000897},
	volume = {47},
